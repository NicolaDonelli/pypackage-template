name: Release on PyPI

defaults:
  run:
    shell: bash

on: [workflow_dispatch]

jobs:
  autorelease:
    name: Release on TestPyPI
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v2.3.4

      - name: Setup Python
        uses: actions/setup-python@v2.2.2
        with:
          python-version: '{{PYTHON_VERSION}}'

      - name: Check typing, linting, formatting and run unit-tests
        run: make checks

      - name: Build distribution and wheel
        run: |
          python -m pip install build wheel
          python -m build .

      - name: Add version to environment vars
        run: |
          VERSION=$(${PYTHON} -c "from importlib.metadata import version;print(version('{{PROJECT_NAME}}'))")
          NAME={{PROJECT_NAME}}
          echo "VERSION=$VERSION" >> $GITHUB_ENV
          echo "NAME=$NAME" >> $GITHUB_ENV

      - name: Publish distribution to PyPI
        run: |
          if [[ "${VERSION}" =~ .*".dev".* || "${VERSION}" == "" ]]; then echo "This is a temporary version: ${VERSION}"; exit 1; fi
          echo -e "__token__\n${{ secrets.PYPI_TOKEN }}" | ${PYTHON} -m twine upload dist/${NAME}-${VERSION}*
